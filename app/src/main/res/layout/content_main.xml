<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.borstsch.bromophone.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BROMOPHONE"
            android:textSize="13pt"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="90dp"
            />

        <Button
            android:id="@+id/button_server"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onServerClick"
            android:text="I AM SERVER"
            android:textColor="@color/cardview_light_background" />


        <Button
            android:id="@+id/button_client"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onClientClick"
            android:text="I AM CLIENT"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/button_play"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onPlayClick"
            android:text="CHOOSE THE SONG"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>


    <TextView
        android:id="@+id/ip_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="TextView"
        android:textSize="10pt"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

</LinearLayout>
